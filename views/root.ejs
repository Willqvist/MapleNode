<%
    function isset(type) {
        return type === 'undefined';
    }

    const attribs = {
        options,
        isset,
        getFile,
        loggedIn: locals.user,
        user: locals.user
    };

    function setup() {
        if(!options.page) {
            print("404");
            return;
        }
        %><%- include(options.page, attribs); %><%
    }

    function getFile(name) {
        return `upload/${name}`;
    }
    setup();
%>
