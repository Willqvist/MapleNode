<!doctype html>
<html>
        <% include head %>
        <style>
            #logoUpload,#heroUpload {
                visibility: hidden;
                display:none;
            }
            .pp2 {
                background:black;
                border-top-right-radius: 2em;
                border-bottom-right-radius: 2em;
            }
            .pp1 {
                background:#F3F3F3;
                border-top-left-radius: 2em;
                border-bottom-left-radius: 2em;
            }
            #prev {
                width:100%;
                height:12em;
                display:flex;
            }
            .pp {
                height:100%;
                height:100%;
                flex:1;
                box-sizing: border-box;
                display:flex;
                padding:1.5em;

            }
            .pc {
                flex:1;
                background: url("../images/svgs/logo_single.svg") no-repeat;
                background-size:contain;
                background-position: center;
            }
            .pp3 {
                border-radius: 2em;
                background:#F3F3F3;
                background: url("../images/headerImage.png") no-repeat;
                background-size:cover;
                background-position: center;
            }
        </style>
    </head>
    <body>
        <p id="fillField">
            You must fill this field
        </p>
        <div id="wrapper">
            <div id="container">
                <h4>Setup <%= name %></h4>
                <h1>Design</h1>
                <form id="form" method="POST" action="" enctype="multipart/form-data">
                    <div class="inputWrapper">
                        <input id="logoUpload" name="logoUpload" size=1 type="file" accept="image/*">
                        <input id="logo" name="logo" required placeholder="Upload logo..." readonly="readonly">
                        <label for="logo">Logo image</label>
                    </div>
                    <div id="prev">
                    <div class="pp pp1">
                        <div id="logoPreview" class="pc"></div>
                    </div>
                    <div class="pp pp2">
                        <div id="logoPreview-black" class="pc"></div>
                    </div>
                    </div>

                    <div class="inputWrapper">
                        <input id="heroUpload" name="heroUpload" size=1 type="file" accept="image/*">
                        <input id="hero" name="hero" required placeholder="Upload Hero image..." readonly="readonly">
                        <label for="hero">Hero image</label>
                    </div>
                    <div id="prev">
                        <div class="pp pp3" id="heroPreview">
                        </div>
                    </div>

                </form>
                <div class="btn prev-btn">
                    <a href="./palette" class="btn-wrapper">
                        <span>Skip</span>
                        <div class="ip">
                            <i class="fas fa-times"></i>
                        </div>
                    </a>
                </div>
                <div class="btn next-btn">
                    <div class="btn-wrapper" id="submitForm">
                    <span>Upload</span>
                        <div class="ip">
                            <i class="fas fa-upload"></i>
                        </div>
                    </div>
                </div>            
            </div>
        </div>
    </body>
        <script>
            let uploadFormLogo = document.getElementById("logoUpload");
            let logoImage = document.getElementById("logo");
            let prevsLogo = [
                document.getElementById("logoPreview"),
                document.getElementById("logoPreview-black")
            ];
            addImageEventListeners(uploadFormLogo,prevsLogo,logoImage);

            let uploadFormHero = document.getElementById("heroUpload");
            let hero = document.getElementById("hero");
            let prevsHero = [
                document.getElementById("heroPreview"),
            ];
            addImageEventListeners(uploadFormHero,prevsHero,hero,{size:"cover"});

            function addImageEventListeners(fileInput,previews,image, settings = {size:"contain"}) {
                let reader = new FileReader();
                fileInput.addEventListener("change",(e)=> {
                    if(e.target.files.length == 0) return;
                    reader.onload = (ev)=> {
                        for(let i = 0; i < previews.length; i++) {
                            let prev = previews[i];
                            prev.style.backgroundImage = "url(" + reader.result + ")";
                            prev.style.backgroundSize = settings.size;
                            prev.style.backgroundRepeat = "no-repeat";
                            prev.style.backgroundPosition = "center";
                        }
                    };
                    image.value = e.target.files[0].name;
                    reader.readAsDataURL(e.target.files[0]);
                },false);
                image.addEventListener("click",()=> {
                    fileInput.click();
                },false);
            }

            let form = document.getElementById("form");
            let submitForm = document.getElementById("submitForm");
            let fillField = document.getElementById("fillField");
            let size = fillField.getBoundingClientRect();
            let middle = (size.bottom - size.top) / 2;
            let inputs = form.getElementsByTagName("input");
            submitForm.addEventListener("click",function()
            {
                let canSend = true;
                for(let i = 0; i < inputs.length; i++)
                {
                    if(inputs[i].value.length == 0 && inputs[i].getAttribute("required") != null)
                    {
                        console.log(inputs[i]);
                        let pos = inputs[i].getBoundingClientRect();
                        //console.log(pos.);
                        fillField.style.left = "calc("+pos.right + "px + 2em)";
                        fillField.style.top = pos.top - middle + ((pos.bottom - pos.top) / 2) + window.pageYOffset + "px";
                        canSend = false;
                        break;
                    }
                }
                if(canSend) {
                    submitForm.getElementsByClassName("fas")[0].className = "fas fa-circle-notch fa-spin";
                    form.submit();
                }
            },false);
    </script>
</html>
