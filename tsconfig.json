{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "noEmit": false,
    "rootDir": "src",
    "lib": [
      "es2017"
    ]
  },
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "name": "MapleNode Documentation"
  },

  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./nodeconfig.json"
  ]
}
